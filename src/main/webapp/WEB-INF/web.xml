<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ListFoodServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.food.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodServlet</servlet-name>
        <url-pattern>/admin/food/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.food.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/admin/food/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDetailFoodServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.food.GetDetailFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetDetailFoodServlet</servlet-name>
        <url-pattern>/admin/food/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFoodServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.food.EditFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditFoodServlet</servlet-name>
        <url-pattern>/admin/food/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.food.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/admin/food/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/category/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDetailCategoryServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.category.GetDetailCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetDetailCategoryServlet</servlet-name>
        <url-pattern>/admin/category/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.category.EditCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/admin/category/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.javaservletassignment02.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

</web-app>